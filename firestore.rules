rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Anyone can read user documents for user lookup (by ID/username)
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // Temporary: Allow any authenticated user to access chats for debugging
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    
    // Temporary: Allow any authenticated user to access messages for debugging
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}